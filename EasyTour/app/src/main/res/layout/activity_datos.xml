<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_datos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diego.myapplication.Obtencion.GuardarDatos">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/nombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/descrip"
            android:layout_weight="0.02" />

        <TextView
            android:text="Coordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coor"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/lat"
            android:layout_below="@+id/guardar"
            android:layout_toStartOf="@+id/floatingActionButton"
            android:layout_marginEnd="56dp"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lat"
            android:layout_alignStart="@+id/editText2"
            android:id="@+id/lon" />

        <TextView
            android:text="Calle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calle"
            android:layout_weight="0.02" />

        <Button
            android:text="Guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guardar"
            android:layout_weight="0.02" />
        <TextView
            android:text="Alertas"
            android:layout_height="wrap_content"
            android:layout_above="@+id/floatingActionButton"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:id="@+id/mensaje"
            android:layout_width="wrap_content" />

        <Button
            android:text="Tomar Foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camara"
            android:layout_weight="0.02" />


    </LinearLayout>

</RelativeLayout>
