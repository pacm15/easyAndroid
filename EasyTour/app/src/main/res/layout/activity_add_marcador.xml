<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_marcadores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fccf08"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.desarrollador.easytour.AddMarcador">

    <TextView
        android:text="Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LblTitulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBottom="@+id/nombre"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/nombre"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:enabled="false"
        android:inputType="text"
        android:layout_alignStart="@+id/txtLatitud" />

    <TextView
        android:text="Latitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LblLatitud"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtLatitud"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:enabled="false"
        android:layout_alignBaseline="@+id/LblLatitud"
        android:layout_alignBottom="@+id/LblLatitud"
        android:layout_centerHorizontal="true"
        android:inputType="text"/>

    <TextView
        android:text="Longitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LblLong"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/txtLatitud"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txtLongitud"
        android:enabled="false"
        android:textColorLink="@android:color/black"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_alignTop="@+id/LblLong"
        android:layout_alignStart="@+id/txtLatitud" />

    <Button
        android:text="Capturar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLocalizar"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/holo_green_light"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/LblLatitud" />

    <TextView
        android:text="Descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LblDescrip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/LblLong" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopSave"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignBaseline="@+id/btnLocalizar"
        android:layout_alignBottom="@+id/btnLocalizar"
        android:layout_alignEnd="@+id/descripcion"
        android:layout_marginEnd="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descripcion"
        android:background="@android:color/white"
        android:textColorLink="@android:color/black"
        android:textColor="@android:color/black"
        android:enabled="false"
        android:layout_alignTop="@+id/LblDescrip"
        android:layout_alignStart="@+id/txtLongitud" />

</RelativeLayout>
